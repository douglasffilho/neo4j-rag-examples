{
  "include": ["src", "tests"],
  "exclude": ["node_modules", "bin", "infra"],
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "#src/*": ["./src/*"],
      "#tests/*": ["./tests/*"]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "baseUrl": ".",
    "outDir": "./bin",
    "rootDir": "./"
  }
}
